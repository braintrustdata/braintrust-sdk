{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "braintrust": ["../../js/src/index.ts"],
      "braintrust/*": ["../../js/src/*"],
      "@braintrust/langchain-js": [
        "../../integrations/langchain-js/src/index.ts"
      ],
      "@braintrust/langchain-js/*": ["../../integrations/langchain-js/src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
