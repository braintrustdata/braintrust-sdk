{
  "compilerOptions": {
	"incremental": true,
    "declaration": true,
    "outDir": "./dist",
    "lib": ["es6"],
    "module": "nodenext",
    "target": "es6",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules/**"]
}
