{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": [
    "**/*.test.ts",
    "**/dist/**",
    "examples/**",
    "node_modules/**",
    "scripts/**",
    "vendor/**"
  ]
}
