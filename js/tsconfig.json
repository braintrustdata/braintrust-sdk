{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": [
    "**/*.test.ts",
    "**/dist/**",
    "**/examples/**",
    "node_modules/**",
    "**/smoke/**",
    "scripts/**",
    "vendor/**",
    "eslint.config.ts",
    "tsup.config.ts",
    "src/auto-instrumentations/**/*.mts",
    "src/auto-instrumentations/bundler/**",
    "src/auto-instrumentations/configs/**",
    "src/auto-instrumentations/loader/**",
    "src/auto-instrumentations/index.ts",
    "tests/auto-instrumentations/**"
  ]
}
